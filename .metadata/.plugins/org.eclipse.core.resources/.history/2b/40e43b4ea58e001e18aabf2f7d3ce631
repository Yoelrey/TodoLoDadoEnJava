package Empresas;

public class Productor extends Thread{

	private Cola cola;
	
	private int n;

	public Productor(Cola cola, int n) {
		super();
		this.cola = cola;
		this.n = n;
	}
	
	@Override
	public void run() {
		for(int i=0;i<5 ;i++) {
			System.out.println(i+" => Productor= "+n+" ,produce: " +1);
			
			try {
				sleep(1000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	
	
	}
	

}


